<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="NVorbis">
      <SpecificVersion>False</SpecificVersion>
      <HintPath>x64/NVorbis.dll</HintPath>
    </Reference>
  </ItemGroup>
  <ItemGroup>
    <Content Include="x64/libogg.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="x64/libtheora.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="x64/libvorbis.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="x64/NVorbis.dll" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Flettu" Version="1.1.2" />
  </ItemGroup>
</Project>
